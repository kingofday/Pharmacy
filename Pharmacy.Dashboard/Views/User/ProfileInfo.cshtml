@model UpdateProfileModel
@{
    ViewBag.Title = Strings.Profile;
}

<div class="row">
    <div class="col-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>@Strings.Profile</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="zmdi zmdi-chevron-down"></i>
                    </a>
                    <a class="close-link">
                        <i class="zmdi zmdi-close"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form role="form" asp-controller="User" asp-action="ProfileInfo" method="post">
                    @Html.HiddenFor(x => x.UserId)
                    <div class="row">
                        <div class="col-12 col-sm-3">
                            <custom-input-for for="Email"></custom-input-for>
                        </div>
                        <div class="col-12 col-sm-3">
                            <custom-input-for for="FullName"></custom-input-for>
                        </div>
                        <div class="col-4 col-sm-3">
                            <custom-checkbox-for for="ChangePassword" wrapper-class="chb-group"></custom-checkbox-for>
                        </div>
                        <div class="col-8 col-sm-3">
                            <custom-input-for type="password" input-disabled="true" for="NewPassword"></custom-input-for>
                        </div>
                    </div>
                    <div class="row btn-group">
                        <div class="col-12">
                            <button type="button" class="btn btn-primary block m-b m-t btn-action btn-sign-in" data-ajax-submit="true">
                                <span class="text">@Strings.Submit</span>
                                <div class="icon">
                                    <i class="zmdi zmdi-floppy rotate-180 default-i"></i>
                                </div>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        (function () {
            $('#ChangePassword').on('ifChanged', function () {
                if ($(this).prop('checked'))
                    $('#NewPassword').prop('disabled', false);
                else $('#NewPassword').val('').prop('disabled', true);
            });
        } ());
    </script>
}
